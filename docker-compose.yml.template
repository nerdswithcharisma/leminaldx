services:
  wordpress:
    image: wordpress:6.4-php8.2-apache
    platform: linux/amd64
    container_name: PROJECT_NAME-wordpress
    restart: unless-stopped
    ports:
      # UPDATE: Change port if 8080 is already in use (e.g., "8082:80")
      - "8080:80"
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_USER: wordpress
      WORDPRESS_DB_PASSWORD: wordpress
      WORDPRESS_DB_NAME: PROJECT_NAME_wordpress
      WORDPRESS_DEBUG: 1
    volumes:
      - ./wp-content:/var/www/html/wp-content
      - ./wp-config.php:/var/www/html/wp-config.php
    depends_on:
      - db

  db:
    image: mysql:8.0
    platform: linux/amd64
    container_name: PROJECT_NAME-mysql
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: PROJECT_NAME_wordpress
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: wordpress
      MYSQL_ROOT_PASSWORD: rootpassword
    volumes:
      - mysql_data:/var/lib/mysql

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    platform: linux/amd64
    container_name: PROJECT_NAME-phpmyadmin
    restart: unless-stopped
    ports:
      # UPDATE: Change port if 8081 is already in use (e.g., "8083:80")
      - "8081:80"
    environment:
      PMA_HOST: db
      PMA_USER: wordpress
      PMA_PASSWORD: wordpress
    depends_on:
      - db

volumes:
  mysql_data:

